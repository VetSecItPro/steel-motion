    "@upstash/redis": "^1.36.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.30.0",
    "globby": "^16.1.0",
    "isomorphic-dompurify": "^2.35.0",
    "lenis": "^1.3.17",
    "lucide-react": "^0.563.0",
    "next": "^16.1.1",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "rehype-pretty-code": "^0.14.1",
    "rehype-slug": "^6.0.0",
    "resend": "^6.1.0",
    "shiki": "^3.22.0",
    "tailwind-merge": "^3.3.1",
    "velite": "^0.3.1",
    "zod": "^4.2.1"
